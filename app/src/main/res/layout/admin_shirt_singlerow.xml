<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/adm_img11shirt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adm_nametext11shirt"
            android:text="This is demo name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/adm_img11shirt"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adm_coursetext11shirt"
            android:text="This is course name"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/adm_img11shirt"
            android:layout_below="@id/adm_nametext11shirt"
            android:layout_marginLeft="10dp"
            tools:ignore="NotSibling" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adm_emailtext11shirt"
            android:text="This is email name"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/adm_img11shirt"
            android:layout_below="@id/adm_coursetext11shirt"
            android:layout_marginLeft="10dp"
            tools:ignore="NotSibling" />
        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/adm_emailtext11shirt"
            android:layout_toRightOf="@id/adm_img11shirt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/edit"

            />
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/adm_emailtext11shirt"
            android:layout_toRightOf="@id/edit_icon"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/deletefrmct"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>