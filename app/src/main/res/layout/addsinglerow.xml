<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img11"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext11"
            android:text="This is demo name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img11"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coursetext11"
            android:text="This is course name"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img11"
            android:layout_below="@id/nametext11"
            android:layout_marginLeft="10dp"
            tools:ignore="NotSibling" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailtext11"
            android:text="This is email name"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img11"
            android:layout_below="@id/coursetext11"
            android:layout_marginLeft="10dp"
            tools:ignore="NotSibling" />
      
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/emailtext11"
            android:layout_toRightOf="@id/img11"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/deletefrmct"
            />
        

    </RelativeLayout>

</androidx.cardview.widget.CardView>