<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoe.shoe_descfragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageholdershoe"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:src="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/nameholdershoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Product Name"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productidholdershoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Product id"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/priceholdershoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product price"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20sp" />



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Buynowbtnshoe"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button2"
                android:text="Buy now" />

            <Button
                android:id="@+id/addtocartbtnshoe"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button3"
                android:text="Add to cart" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>