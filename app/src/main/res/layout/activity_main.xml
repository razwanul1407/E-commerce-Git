<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passwordId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/shopping_cart2"/>
    <EditText
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInEmailEditTextId"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Email"
        android:textColorHighlight="#47A34B"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_baseline_email_24"

        android:textColor="#47A34B"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInPasswordEditTextId"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:textColorHighlight="#47A34B"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@drawable/input_design"

        android:textColor="#47A34B"
        />
    <TextView
        android:id="@+id/adminlogintextViewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Login?"
        android:textColor="#47A34B"
        android:layout_marginLeft="250dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <Button
        android:id="@+id/signInButtonId"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:text="Sign in"
        android:textAllCaps="false" />
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/signUpTextViewId"
        android:textColor="#47A34B"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Are you not registered? Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressbarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>