<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/backgroundbutbtn"
    tools:context=".userprofile">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView1234"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp"
        tools:srcCompat="@tools:sample/avatars"
        android:src="@drawable/ic_launcher_background"
        tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:id="@+id/profile_nametextid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:text="Name"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#47A34B"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:id="@+id/profile_emailtextid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Email"
            android:textSize="20dp"



            android:padding="10dp"
            android:textColor="#47A34B"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/profile_phonetextid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Phone"
            android:textSize="20dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="0dp"
            android:textColor="#47A34B"
            android:padding="10dp"

            android:drawableLeft="@drawable/ic_baseline_phone_24"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/profile_passwordtextid"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="20dp"

        android:layout_marginTop="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <Button
        android:id="@+id/Edituserbuttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="20dp"
        android:background="@drawable/buttons"
        android:text="Edit" />

</LinearLayout>